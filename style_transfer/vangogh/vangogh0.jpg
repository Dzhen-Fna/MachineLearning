import os

# 设置需要重命名的文件所在的目录
directory = './'

# 设置文件重命名的规则，例如：将文件重命名为"新文件名_序号.扩展名"
new_filename_prefix = 'vangogh'
file_extension = '.jpg'  # 假设所有文件都是.txt格式

# 获取指定目录下的所有文件列表
files = os.listdir(directory)

# 重命名文件
for index, file in enumerate(files):
    # 构建新的文件名
    new_filename = new_filename_prefix + str(index) + file_extension
    # 获取原文件的完整路径
    old_file = os.path.join(directory, file)
    # 获取新文件的完整路径
    new_file = os.path.join(directory, new_filename)
    
    # 重命名操作
    try:
        os.rename(old_file, new_file)
        print(f'文件"{old_file}"已重命名为"{new_file}"')
    except OSError as e:
        print(f'重命名"{old_file}"时出错: {e}')

